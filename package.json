{
  "name": "pulsar-gpt-complete",
  "main": "./lib/main",
  "version": "0.1.0",
  "description": "Call OpenAI completions in Pulsar",
  "repository": "https://github.com/tom-power/pulsar-gpt-complete",
  "license": "MIT",
  "engines": {
    "pulsar": ">=1.0.0 <2.0.0"
  },
  "configSchema": {
    "openaiApiKey": {
      "type": "string",
      "default": "",
      "description": "Your openai api key."
    },
    "outputLanguageFromGrammar": {
      "type": "boolean",
      "default": "true",
      "description": "Request that output matches language of current file."
    }
  },
  "dependencies": {
    "dedent-js": "^1.0.1",
    "openai": "^3.3.0"
  },
  "scripts": {
    "eslint": "eslint . --ext .json,.js",
    "lint": "npm run eslint",
    "lintfix": "npm run eslint -- --fix",
    "editor-test": "pulsar --test spec",
    "test": "npm run editor-test && npm run lint"
  },
  "devDependencies": {
    "eslint": "^8.43.0",
    "eslint-plugin-json": "^3.1.0"
  }
}
